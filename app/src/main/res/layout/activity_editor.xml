<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffb3b3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill the details here ."
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/save_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="#ffb366"
                android:layout_marginLeft="20dp" />
            <Button
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:background="#ffb366"
                android:layout_marginLeft="20dp"/>
            <Button
                android:id="@+id/delete_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:background="#ffb366"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name ->"
            android:textColor="#bf4080"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/product_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the product name here "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price of the product ->"
            android:textColor="#bf4080"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/price_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the price of the product here ."
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity of the product ->"
            android:textColor="#bf4080"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/inc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffb366"
            android:text="+"/>
        <EditText
            android:id="@+id/quantity_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the quantity here."
            android:inputType="numberDecimal"/>
        <Button
            android:id="@+id/dec_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffb366"
            android:text="-"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#bf4080"
            android:text="Company Name ->"/>
        <EditText
            android:id="@+id/company_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the company name here."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click the ADD IMAGE button to insert the product image."
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:background="#ffb366"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>
</ScrollView>